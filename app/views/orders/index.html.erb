<div class="row">
  <div id="order-new" class="col-12">
    <h1 class="mt-3 mb-2"><%= t(:select_language) %></h1>
    <%= render :partial => 'layouts/notice', :locals => {  :notice => notice, :alert => alert } %>
    <%= form_tag new_order_path, method: 'get' do %>
      <div class="row">
      <article class="col-12 col-sm-6 col-lg-3">
        <label>
        <%= radio_button_tag 'locale', "ko", true, class: "color_input" %>
          <%=t(:korean) %>
        </label>
      </article>
        <article class="col-12 col-sm-6 col-lg-3">
          <label>
        <%= radio_button_tag 'locale', "en", false, class: "color_input" %>
            <%=t(:english) %>
          </label>
      </article>
        <article class="col-12 col-sm-6 col-lg-3">
          <label>
            <%= radio_button_tag 'locale', "ja", false, class: "color_input" %>
            <%=t(:japanese) %>
          </label>
        </article>
        <article class="col-12 col-sm-6 col-lg-3">
          <label>
        <%= radio_button_tag 'locale', "zh-CN", false, class: "color_input" %>
            <%=t(:chineses) %>
          </label>
      </article>
      </div>
    <div class="d-grid gap-2 mt-3">

      <%= submit_tag t(:start_order), class: "btn btn-primary btn-lg" %>
    </div>
      <% end %>
  </div>
</div>
<div class="row">
  <div id="order-new" class="col-12">
    <h1 class="mt-3 mb-2"><%= t(:select_language) %></h1>
    <%= render :partial => 'layouts/notice', :locals => {  :notice => notice, :alert => alert } %>
    <%= form_tag new_order_path, method: 'get' do %>
      <div class="row">
      <article class="col-12 col-sm-6 col-lg-3">
        <input type="hidden" value="<%=t(:start_order,locale: :ko) %>">
        <input type="hidden" value="<%=t(:select_language,locale: :ko) %>">
        <label>
        <%= radio_button_tag 'locale', "ko", true %>
          <%=t(:korean) %>
        </label>
      </article>
        <article class="col-12 col-sm-6 col-lg-3">
          <input type="hidden" value="<%=t(:start_order,locale: :en) %>">
          <input type="hidden" value="<%=t(:select_language,locale: :en) %>">
          <label>
        <%= radio_button_tag 'locale', "en", false %>
            <%=t(:english) %>
          </label>
      </article>
        <article class="col-12 col-sm-6 col-lg-3">
          <input type="hidden" value="<%=t(:start_order,locale: :ja) %>">
          <input type="hidden" value="<%=t(:select_language,locale: :ja) %>">
          <label>
            <%= radio_button_tag 'locale', "ja", false %>
            <%=t(:japanese) %>
          </label>
        </article>
        <article class="col-12 col-sm-6 col-lg-3">
          <input type="hidden" value="<%=t(:start_order,locale: :'zh-CN') %>">
          <input type="hidden" value="<%=t(:select_language,locale: :'zh-CN') %>">
          <label>
        <%= radio_button_tag 'locale', "zh-CN", false %>
            <%=t(:chineses) %>
          </label>
      </article>
      </div>
      <div class="row">
    <div class="d-grid gap-2 mt-3">
      <%= submit_tag t(:start_order), class: "btn btn-primary btn-lg" %>
    </div>
      </div>
      <% end %>
  </div>
</div>